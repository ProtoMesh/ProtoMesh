include "uuid.fbs";
include "crypto.fbs";

namespace openHome.registry;

enum EntryType:ubyte {
    UPSERT,
    DELETE
}

table Entry {
    uuid: UUID (required);
    parent: UUID (required);

    type: EntryType;

    key: string (required);
    value: string; // TODO Change type to ubyte

    signature: crypto.Signature;
}

file_identifier "REGE";
root_type Entry;
