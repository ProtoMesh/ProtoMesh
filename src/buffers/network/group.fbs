include "uuid.fbs";
include "crypto.fbs";

namespace lumos.network;

table GroupParticipant {
    uuid: UUID (required);
    encryptedGroupKey: [ubyte];
}

table Group {
    uuid: UUID (required);
    publicKey: crypto.PublicKey (required);

    /// Public key of the person which encrypted the participants keys
    peerPublicKey: crypto.PublicKey (required);
    participants: [GroupParticipant];
}

file_identifier "GRUP";
root_type Group;